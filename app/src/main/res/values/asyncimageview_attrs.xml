<resources>
	<declare-styleable name="AsyncImageView">
		<!-- useMemoryCache: set to false to disable the use of the memory cache. For example
		for static content where bitmap reuse is unlikely or huge fullscreen bitmaps. Defaults
		to true -->
		<attr name="useMemoryCache" format="boolean"/>
		<!-- fading: set to false to disable image transitions -->
		<attr name="fading" format="boolean"/>
		<attr name="errorDrawable" format="reference"/>
		<attr name="defaultDrawable" format="reference"/>
	</declare-styleable>
</resources>